.page-container {
  background-color: #f5f5f5;
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333333;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1px solid #e0e0e0;
}

.info-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666666;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
}

.unbind-button {
  margin-top: 30rpx;
  background-color: #ff0000;
  color: #ffffff;
  font-size: 30rpx;
  padding: 15rpx;
  border-radius: 10rpx;
}