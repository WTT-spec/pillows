.page-bg {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
}

.page-container {
  /* background-color: #f5f5f5; */
  padding: 20rpx;
}

/* 用户卡片 */
.user-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #b2b8e2 0%, #546fb9 100%);
  border-radius: 16rpx;
  color: white;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stats text {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.section {
  /* background-color: #ffffff; */
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #f5eded;
}

.info-item,
.device-item,
.setting-item,
.report-item,
.help-item,
.about-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1px solid #e0e0e0;
}

.info-label,
.device-label,
.setting-label,
.report-label,
.help-label,
.about-label {
  width: 150rpx;
  font-size: 28rpx;
  color: #ffffff;
}

.info-value,
.device-value,
.setting-value,
.help-value,
.about-value {
  font-size: 28rpx;
  color: #f5eded;
}

.device-icon,
.setting-icon,
.report-icon,
.help-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: auto;
}

.toggle-icon {
  width: 30rpx;
  height: 30rpx;
}

.warning-list-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #f5eded;
}

.warning-list {
  padding-left: 20rpx;
}