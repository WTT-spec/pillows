/* miniprogram/pages/pillowSet/pillowSet.wxss */
/* 通用样式 */
/* 通用样式 */
.page-bg {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
}

.page-container {
  position: relative;
}

/* 数据项通用样式 */
.data-container {
  margin-top: 36rpx;
  display: grid;
  justify-content: center;
  grid-template-columns: repeat(auto-fill, 340rpx);
  grid-gap: 36rpx;
}

.data-item {
  position: relative;
  background-color: #1C1B3B;
  height: 180rpx;
  box-shadow: #d6d6d6 0 0 8rpx;
  border-radius: 36rpx;
  display: flex;
  justify-content: space-between;
}

.data-item .data-text {
  position: absolute;
  top: 36rpx;
  right: 24rpx;
  text-align: right;  /* 文本右对齐 */
  white-space: nowrap;   /* 禁止文本自动换行 */
}

.data-item .data-picture {
  position:absolute;
  height: 96rpx;
  width: 96rpx;
  left: 16rpx;    /* 图片和边框左边的距离 */
  top: 16rpx;     /* 图片和边框上面的距离 */
}

.data-item .data-title {
  font-size: 33rpx;
  color: #dbd9d9;
}

.data-item .data-value {
  font-size: 45rpx;    /* 字体大小 */
  font-weight: bold;   /* 字体粗细 */
  color: #7f7f7f;
  margin-top: 36rpx;   /* 字体和上边的距离 */
}

/* 特定数据项样式 */
.height-control-container {
  grid-template-columns: repeat(auto-fill, 635rpx);
  margin-left: 350rpx;
  display: grid;
  justify-content: center;
  grid-gap: 36rpx;
}

.height-control-container .data-item .data-text {
  width: 80%;
  text-align: center;
}

/* miniprogram/pages/deviceMode/deviceMode.wxss */
.mode-container {
  padding: 40rpx;
}

.mode-buttons {
  display: flex;
  justify-content: space-around;
  margin-bottom: 0rpx;
}

.mode-btn {
  width: 28%;
  margin-top: 30rpx;
  padding: 20rpx 0;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  font-size: 32rpx;
  color: #333;
}

.mode-btn.active {
  background-color: #4CAF50; /* 绿色表示激活状态 */
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.3);
}

.status-tip {
  text-align: center;
  font-size: 28rpx;
  color: #666666;
  margin-top: 20rpx;
}

/* 偏好设置优化样式 */
/* 偏好设置完整样式 */
/* 外层容器：包裹整个偏好设置模块 */
.preference-section-container {
  background: rgba(255,255,255,0.05); /* 半透黑背景，适配星空底图 */
  border-radius: 30rpx; /* 圆角边框 */
  margin: 20rpx; /* 与页面其他元素的间距 */
  padding: 20rpx; /* 内部留白 */
  color: #dbd9d9; /* 文字颜色（白色，适配深色背景） */
  box-sizing: border-box; /* 确保padding不影响整体宽度 */
}

/* 标题区域：包含主标题和副标题 */
.preference-header {
  display: flex; /* 横向排列 */
  align-items: center; /* 垂直居中 */
  margin-bottom: 20rpx; /* 与下方内容的间距 */
  padding: 0 10rpx; /* 左右内边距，避免文字贴边 */
}
.preference-title {
  font-size: 36rpx; /* 主标题字号 */
  font-weight: bold; /* 加粗 */
  margin-right: 10rpx; /* 与副标题的间距 */
}
.preference-subtitle {
  font-size: 24rpx; /* 副标题字号（小于主标题） */
  opacity: 0.8; /* 半透明效果，区分主次 */
  color: #dbd9d9; /* 浅灰色，避免与主标题冲突 */
}

/* 分块容器：包裹“仰睡偏好”和“侧睡偏好”各自的内容 */
.preference-block {
  background: rgba(255,255,255,0.1); /* 比外层稍深的半透背景，形成分层感 */
  border-radius: 20rpx; /* 圆角 */
  padding: 20rpx; /* 内部留白 */
  margin-bottom: 20rpx; /* 两个分块之间的间距 */
}
/* 分块标题：如“仰睡偏好”“侧睡偏好” */
.block-title {
  font-size: 30rpx; /* 标题字号 */
  font-weight: bold; /* 加粗 */
  margin-bottom: 15rpx; /* 与下方内容的间距 */
  padding-left: 10rpx; /* 左侧留白，配合左侧色条 */
  border-left: 6rpx solid #4CAF50; /* 左侧绿色标识条，增强视觉引导 */
  display: inline-block; /* 确保margin-bottom生效 */
}

/* 一行两列布局：用于“左头窝+右头窝”“头窝+颈窝”的排列 */
.row-grid {
  display: grid; /* 网格布局 */
  grid-template-columns: 1fr 1fr; /* 两列均分宽度 */
  gap: 20rpx; /* 两列之间的间距 */
}

/* 列内容容器：每个网格项的外层容器 */
.grid-item {
  display: flex; /* 纵向排列（标签在上，按钮组在下） */
  flex-direction: column;
  align-items: center; /* 水平居中 */
  background: rgba(255,255,255,0.08); /* 网格项背景，进一步分层 */
  border-radius: 20rpx; /* 圆角 */
  padding: 15rpx; /* 内部留白 */
}
/* 颈窝高度独占一行的样式 */
.full-width {
  grid-column: 1 / 3; /* 从第1列跨到第3列（即占满整行） */
}

/* 标签文本：如“左头窝”“颈窝” */
.label {
  font-size: 26rpx; /* 标签字号 */
  margin-bottom: 10rpx; /* 与下方按钮组的间距 */
  opacity: 0.9; /* 略透明，突出按钮组 */
}

/* 加减按钮组容器：包裹“-”“数值”“+” */
.control-group {
  display: flex; /* 横向排列 */
  align-items: center; /* 垂直居中 */
  justify-content: center; /* 水平居中 */
  min-width: 0; /* 关键：避免flex容器强制拉伸子元素（解决宽度问题） */
}

/* 加减按钮样式（核心） */
.adjust-btn {
  /* 尺寸控制（重点解决宽度问题） */
  width: 50rpx !important; /* 按钮宽度（!important确保覆盖全局样式） */
  height: 50rpx !important; /* 按钮高度 */
  line-height: 50rpx !important; /* 与高度一致，确保“+”“-”垂直居中 */
  
  /* 清除默认样式 */
  padding: 0 !important; /* 清除小程序button默认内边距 */
  min-width: 0 !important; /* 清除默认最小宽度限制 */
  border: none !important; /* 清除默认边框 */
  margin: 0 8rpx !important; /* 按钮与数值的间距 */
  
  /* 样式美化 */
  border-radius: 25rpx !important; /* 椭圆效果（高度的一半） */
  background: #dbd9d9 !important; /* 白色背景，与深色页面对比 */
  color: #333 !important; /* 深色文字，确保清晰 */
  font-size: 40rpx !important; /* 按钮内文字大小 */
  
  /* 布局控制 */
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}
/* 清除按钮点击后的默认边框（小程序特有） */
.adjust-btn::after {
  border: none !important;
}

/* 数值显示：如“3”“5” */
.value {
  font-size: 26rpx; /* 数值字号 */
  min-width: 36rpx; /* 确保不同数字宽度一致（如“1”和“7”宽度相同） */
  text-align: center; /* 居中显示 */
  color: #dbd9d9; /* 白色文字，适配背景 */
  margin: 0 8rpx; /* 与按钮的间距 */
}

/* 保存按钮 */
.save-button {
  width: 100%; /* 占满容器宽度 */
  background: #4CAF50; /* 绿色背景，突出可点击 */
  color: #fff; /* 白色文字 */
  font-size: 32rpx; /* 按钮文字大小 */
  padding: 20rpx 0; /* 上下内边距，增加点击区域 */
  border-radius: 20rpx; /* 圆角 */
  margin-top: 10rpx; /* 与上方内容的间距 */
  border: none; /* 清除默认边框 */
}
/* 保存按钮点击样式（可选） */
.save-button:active {
  background: #3d8b40; /* 点击时加深颜色，反馈交互 */
}