.page-container {
  background-color: #f5f5f5;
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333333;
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1px solid #e0e0e0;
}

.setting-label {
  width: 150rpx;
  font-size: 28rpx;
  color: #666666;
}

.picker-value {
  font-size: 28rpx;
  color: #333333;
  margin-left: auto;
}

.sync-button {
  margin-left: auto;
  background-color: #3d77ff;
  color: #ffffff;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}